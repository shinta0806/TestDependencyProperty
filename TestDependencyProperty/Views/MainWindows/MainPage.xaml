<Page
    x:Class="TestDependencyProperty.Views.MainWindows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vcc="using:TestDependencyProperty.Views.CustomControls"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
    mc:Ignorable="d" >

	<StackPanel Margin="20" >

		<!-- ウィンドウタイトル設定 -->
		<Button Content="ウィンドウタイトル変更" Command="{x:Bind ViewModel.ButtonSetWindowTitleClickedCommand}" />
		
		<!-- テキスト設定 -->
		<StackPanel Orientation="Horizontal" >
			<Button Content="テキスト変更" Command="{x:Bind ViewModel.ButtonSetNormalTextClickedCommand}" />

			<!-- 自作コントロールの普通のプロパティー NormalText にバインド -->
			<vcc:TextBox2 NormalText="{x:Bind ViewModel.MyText, Mode=OneWay}" Width="200" />
		</StackPanel>

	</StackPanel>

</Page>
