<Page
    x:Class="TestDependencyProperty.Views.MainWindows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vcc="using:TestDependencyProperty.Views.CustomControls"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
    mc:Ignorable="d" >

	<StackPanel Margin="20" >

		<!-- ウィンドウタイトル設定 -->
		<Button Content="バインド経由で Window.Title 変更（普通のプロパティー）" Command="{x:Bind ViewModel.ButtonSetWindowTitleClickedCommand}" />

		<!-- テキスト設定 -->
		<StackPanel Orientation="Horizontal" Margin="0,20,0,0" >
			<Button Content="バインド経由で TextBox2.NormalText 変更（普通のプロパティー）" Command="{x:Bind ViewModel.ButtonSetNormalTextClickedCommand}" />

			<!-- 自作コントロールにバインド（NormalText：普通のプロパティー、KeyDownInfo：依存関係プロパティー） -->
			<vcc:TextBox2 NormalText="{x:Bind ViewModel.MyText, Mode=OneWay}" 
						  KeyDownInfo="{x:Bind ViewModel.MyKeyDownInfo, Mode=TwoWay}" Width="200" />
		</StackPanel>

		<StackPanel Orientation="Horizontal" >
			<TextBlock Text="TextBox2 でキーを押すと、バインド経由で右の欄に表示（依存関係プロパティー）：" />
			<TextBlock Text="{x:Bind ViewModel.MyKeyDownInfo, Mode=OneWay}" Margin="10,0,0,0" />
		</StackPanel>

	</StackPanel>

</Page>
